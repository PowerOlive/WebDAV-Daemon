<server-config xmlns="http://couling.me/webdavd">
	<!-- Each <server> will occupy its own process -->
	<server>
		<!-- Each listen port opens an individual listening daemon -->
		<!-- There is no default port. Default host is "*" (any ip). Default ssl-enabled 
			is "no" -->
		<!-- The following will listening on localhost only and be unencrypted -->
		<listen>
			<port>80</port>
			<host>localhost</host>
			<encryption>none</encryption>
		</listen>
		<!-- The following will listen on all ips and be encrypted -->
		<listen>
			<port>443</port>
			<!-- Only "none" and "ssl" are currently supported -->
			<encryption>ssl</encryption>
		</listen>

		<!-- The actual rap session max life (has secirity implications) -->
		<!-- default: 5:00 Supports format: [[[hours:]minutes:]seconds] -->
		<session-timeout>1:00</session-timeout>

		<!-- Max rap sessions per user keep this low (eg 10) -->
		<max-user-sessions>10</max-user-sessions>

		<!-- Not yet supported until multiple servers. Will be very important defaut 
			to root -->
		<restricted>nobody</restricted>

		<!-- mime.types file default /etc/mime.types -->
		<mime-file>/etc/mime.types</mime-file>

		<!-- The location of the rap binary. default /usr/sbin/rap -->
		<!-- DO NOT CHANGE UNLESS YOU KNOW WHAT YOU ARE DOING -->
		<rap-binary>/home/philip/workspace/WebDavServer/build/rap</rap-binary>

		<!-- The service name for PAM. specifies the file name searched for -->
		<!-- in /etc/pam.d/. default webdavd -->
		<pam-service>webdavd</pam-service>

		<!-- Directory containing static error responses -->
		<!-- default /usr/share/webdavd -->
		<static-error-dir>/usr/share/webdavd</static-error-dir>

		<!-- File location for logs. Default /var/log/error.log and /var/log/access.log -->
		<error-log>/var/log/webdav-error.log</error-log>
		<access-log>/var/log/webdav-access.log</access-log>

		<ssl-cert>

			<!-- Hostname for SNI (multiple certificates -->
			<!-- The FIRST <cert> is always used for unknown hosts -->
			<!-- The certificate file -->
			<certificate>/etc/ssl/certs/local/server.crt</certificate>

			<!-- If the certificate requires intermediary ca certificates then add 
				<chain> nodes -->
			<chain>/etc/ssl/certs/local/server.crt</chain>
			<chain>/etc/ssl/certs/local/server.crt</chain>

			<!-- The key for <certificate> -->
			<key>/etc/ssl/private/server.key</key>
		</ssl-cert>
	</server>
</server-config>

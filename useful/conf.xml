<?xml version="1.0" encoding="utf-8" ?>
<server-config xmlns="http://couling.me/webdavd">
	<server>
		<listen>
			<port>80</port>
			<host>localhost</host>
			<encryption>none</encryption>
		</listen>
		<listen>
			<port>443</port>
			<encryption>ssl</encryption>
		</listen>
		<session-timeout>1:00</session-timeout>
		<max-user-sessions>10</max-user-sessions>
		<restricted>nobody</restricted>
		<mime-file>/etc/mime.types</mime-file>
		<rap-binary>/home/philip/workspace/WebDavServer/build/rap</rap-binary>
		<pam-service>webdavd</pam-service>
		<static-error-dir>/usr/share/webdavd</static-error-dir>
		<error-log>../webdav.log</error-log>
		<access-log>../webdav.log</access-log>
		<ssl-cert>
			<certificate>/etc/ssl/certs/local/server.crt</certificate>
			<key>/etc/ssl/private/server.key</key>
		</ssl-cert>
	</server>
</server-config>
